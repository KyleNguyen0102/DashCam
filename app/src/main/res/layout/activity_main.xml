<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.car.dashcam.MainActivity">

    <Button
        android:id="@+id/demoRecordVideoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:text="@string/str_001" />

    <Button
        android:id="@+id/demoMapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/demoRecordVideoBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="@string/str_002" />

    <Button
        android:id="@+id/demoConnectivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_003"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/demoRecordVideoBtn"
        android:layout_marginBottom="103dp" />

</RelativeLayout>
